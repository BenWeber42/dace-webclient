{
    "compilerOptions": {
        "noEmit": true,
        "target": "ESNext",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "src/**/*"
    ]
}
